@code {
    [Parameter]
    public string TenantId { get; set; }

    private List<MenuItem> menuItems;

    public class MenuItem
    {
        public string Text { get; }
        public string Url { get; }
        public List<MenuItem> SubMenu { get; }

        public MenuItem(string text, string url, List<MenuItem> subMenu = null)
        {
            Text = text;
            Url = url;
            SubMenu = subMenu ?? new List<MenuItem>();
        }
    }

    private bool toggleDark = false;
    bool toggleHighContrast = false;
    protected override async Task OnInitializedAsync()
    {
        sharedService.OnChange += StateHasChanged;
        base.OnInitialized();
        if (!(await LocalStorage.ContainKeyAsync("theme")))
        {
            await LocalStorage.SetItemAsStringAsync("theme", "light");
        }
        else
        {
            string theme = await LocalStorage.GetItemAsStringAsync("theme");

            if (theme == "dark")
            {
                toggleDark = true;
            }
            if (theme == "high-contrast")
            {
                toggleHighContrast = true;
            }
            else
            {
                toggleDark = false;
            }
        }
    }

    private async Task ChangeThemeToDark()
    {
        string theme = await LocalStorage.GetItemAsStringAsync("theme");
        await LocalStorage.SetItemAsStringAsync("theme", "dark");
        toggleDark = true;
        // if (theme == "dark")
        // {
        //     await LocalStorage.SetItemAsStringAsync("theme", "light");
        // }
        // else
        // {
        //     await LocalStorage.SetItemAsStringAsync("theme", "dark");
        // }
    }

    private async Task ChangeThemeToLight()
    {
        string theme = await LocalStorage.GetItemAsStringAsync("theme");
        await LocalStorage.SetItemAsStringAsync("theme", "light");
        toggleHighContrast = false;
        toggleDark = false;
    }

    private string GetFontSizeStyle()
    {
        return $@"
        p {{ font-size: {sharedService.FontSize}px; }}
        h2, h3, h4, h5, h6 {{ font-size: {sharedService.FontSizeHead}px; }}
        h1{{font-size: {sharedService.FontSizeH1}px; }}
        time {{font-size: {sharedService.FontSize}px;}}";
        //return $"font-size: {sharedService.FontSize}px;";
    }

    private async Task AddContrastTheme()
    {
        string theme = await LocalStorage.GetItemAsStringAsync("theme");
        await LocalStorage.SetItemAsStringAsync("theme", "high-contrast");
        toggleDark = false;
        toggleHighContrast = !toggleHighContrast;
    }
}